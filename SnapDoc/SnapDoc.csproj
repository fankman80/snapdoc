		<MauiIcon Include="Resources\AppIcon\appicon_android_bg.png" ForegroundFile="Resources\AppIcon\appicon_android_fg.png" Condition="'$(TargetFramework)' == 'net10.0-android'" />

		<!-- Windows-spezifisches Icon -->
		<MauiIcon Include="Resources\AppIcon\appicon_win.png" Condition="'$(TargetFramework)' == 'net10.0-windows10.0.26100.0'" />

