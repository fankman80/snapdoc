<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<!-- Zielplattformen -->
		<TargetFrameworks>net10.0-android;net10.0-windows10.0.26100.0</TargetFrameworks>

		<!-- MAUI Basis -->
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- App Infos -->
		<ApplicationTitle>SnapDoc</ApplicationTitle>
		<ApplicationId>com.ebbe.snapdoc</ApplicationId>
		<Title>SnapDoc</Title>
		<Authors>Michael Fankhauser</Authors>
		<Company>Emch+Berger Bern AG</Company>
		<RootNamespace>SnapDoc</RootNamespace>
		<DefaultLanguage>de-DE</DefaultLanguage>
		<OutputType>Exe</OutputType>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	</PropertyGroup>

	<!-- Android Signatur (zentral, gilt für alle Builds) -->
	<PropertyGroup>
		<AndroidKeyStore>True</AndroidKeyStore>
		<AndroidSigningKeyStore>C:\Users\fankhauser\Desktop\SnapDoc\SnapDoc.keystore</AndroidSigningKeyStore>
		<AndroidSigningStorePass>p0Ny05jY</AndroidSigningStorePass>
		<AndroidSigningKeyAlias>bsm24</AndroidSigningKeyAlias>
		<AndroidSigningKeyPass>p0Ny05jY</AndroidSigningKeyPass>
		<WindowsPackageType>None</WindowsPackageType>
	</PropertyGroup>

	<!-- Debug Android -->
	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net10.0-android|AnyCPU'">
		<AndroidPackageFormat>aab</AndroidPackageFormat>
	</PropertyGroup>

	<!-- Release Android -->
	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net10.0-android|AnyCPU'">
		<AndroidPackageFormat>aab</AndroidPackageFormat>
		<AndroidLinkTool>r8</AndroidLinkTool>
		<Optimize>true</Optimize>
	</PropertyGroup>

	<!-- Windows Debug -->
	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net10.0-windows10.0.26100.0|AnyCPU'">
		<EnableWindowsTargeting>true</EnableWindowsTargeting>
	</PropertyGroup>

	<!-- Windows Release -->
	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net10.0-windows10.0.26100.0|AnyCPU'">
		<EnableWindowsTargeting>true</EnableWindowsTargeting>
		<Optimize>true</Optimize>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<UseHotReload>false</UseHotReload>
		<DebugSymbols>false</DebugSymbols>
	</PropertyGroup>

    <PropertyGroup>
        <ApplicationIconScaling>true</ApplicationIconScaling>
        <PackageIcon>appicon.png</PackageIcon>
    </PropertyGroup>

	<ItemGroup>
